# Photography Booking System - Environment Variables Example
# Copy this file to .env and fill in your actual values

# === Core Configuration ===
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# === Security ===
SESSION_SECRET=your-session-secret-here-change-this
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# === Database (MongoDB) ===
# Local: mongodb://localhost:27017/southsydneyphotography
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb://localhost:27017/southsydneyphotography

# === Email Configuration ===
EMAIL_HOST=smtp.zoho.com.au
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=notifications <your-email@domain.com>
CONTACT_EMAIL=admin@yourdomain.com

# === Stripe Configuration (Test Keys) ===
STRIPE_ACCOUNT_ID=acct_your_account_id
STRIPE_SECRET_KEY=sk_test_your_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/thank-you.html?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=http://localhost:3000/booking.html?status=cancelled

# === Stripe Price IDs (from your Stripe dashboard) ===
STRIPE_PRICE_SANTAS_GIFT_PACK=price_xxxxx
STRIPE_PRICE_RUDOLPH=price_xxxxx
STRIPE_PRICE_BLITZEN=price_xxxxx
STRIPE_PRICE_DIGITAL_PACKAGE=price_xxxxx
STRIPE_PRICE_VIXEN=price_xxxxx

# === Zoho Calendar Integration ===
ZOHO_ACCOUNTS_BASE_URL=https://accounts.zoho.com.au
ZOHO_OAUTH_ACCESS_TOKEN=1000.your_access_token
ZOHO_OAUTH_REDIRECT_URI=http://localhost:3000/api/zoho/callback
ZOHO_OAUTH_CLIENT_SECRET=your_client_secret
ZOHO_OAUTH_CLIENT_ID=1000.your_client_id
ZOHO_OAUTH_SCOPE=ZohoCalendar.calendar.ALL,ZohoCalendar.event.ALL,ZohoCalendar.freebusy.ALL,ZohoBookings.data.ALL
ZOHO_OAUTH_REFRESH_TOKEN=1000.your_refresh_token
ZOHO_FREEBUSY_USER=your-email@domain.com
ZOHO_CALENDAR_BASE_URL=https://calendar.zoho.com.au
ZOHO_CALENDAR_ID=your_calendar_id
ZOHO_TIMEZONE=Australia/Sydney

# === Booking Configuration ===
BOOKING_SLOT_MINUTES=5
BOOKING_START_HOUR=10
BOOKING_END_HOUR=16

# === Twilio SMS Configuration (REQUIRED FOR SMS NOTIFICATIONS) ===
# Get these values from https://console.twilio.com/
# 1. Account SID and Auth Token from dashboard
# 2. Phone number from Phone Numbers section (must be E.164 format)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# === Session & Cookies ===
SESSION_NAME=southsydney.sid
COOKIE_DOMAIN=localhost

# === Trust Proxy (for Vercel/production) ===
# TRUST_PROXY=1
